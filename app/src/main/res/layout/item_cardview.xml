<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/institucion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Universidad Nacional Mayor de San Marcos"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/programa_academico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Ingenieria de Software"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:text="2017-05-10-2020-05-10"
                    android:textColor="@color/black" />

                <View style="@style/Divider" />

                <TextView
                    android:id="@+id/formacionacad_more"
                    style="@style/SeeMore" />

            </LinearLayout>

            <ImageView
                android:id="@+id/edit_formacion"
                android:layout_width="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_create_black_24dp"
                android:tint="@color/grey" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>