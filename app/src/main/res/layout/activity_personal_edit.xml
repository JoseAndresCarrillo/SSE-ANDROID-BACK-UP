        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/civil_state_title" />

        <Spinner
            android:id="@+id/gdt_civil_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/children_title" />

        <EditText
            android:id="@+id/gdt_children"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_title" />

        <EditText
            android:id="@+id/gdt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_detail_title" />

        <EditText
            android:id="@+id/gdt_residence_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

